{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@ui/*": ["src/ui/*"],
    },
    "incremental": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
